{
    "compilerOptions": {
        "allowJs": true,
        "module": "CommonJS",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2015",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "typeRoots": [
          "src/types",
          "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}